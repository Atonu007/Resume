{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "buildCommand": "pip install -r requirements.txt"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build",
        "buildCommand": "bash build_files.sh"
      }
    }
  ],
  "rewrites": [
    { "source": "/media/(.*)", "destination": "/media/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
